/* ===========================================
   COMPREHENSIVE RESPONSIVE DESIGN
   Mobile-First Approach for All Components
   =========================================== */

/* ===== TABLET AND BELOW (1024px) ===== */
@media (max-width: 1024px) {
  :root {
    --page-margin: 3%;
  }

  .container {
    max-width: 100%;
    padding: 0 var(--page-margin);
  }

  /* Homepage layout adjustments */
  .homepage-layout {
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  .homepage-sidebar {
    position: static;
    width: 100%;
    margin-top: var(--space-2xl);
  }

  /* Blog cards grid - 2 columns on tablet */
  .blog-cards-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  /* Library hub cards - 2 columns */
  .myverse-hub-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }
}

/* ===== MOBILE AND TABLET PORTRAIT (768px) ===== */
@media (max-width: 768px) {
  :root {
    --page-margin: 4%;
    --space-mobile: 1rem;
    --space-mobile-lg: 1.5rem;
  }

  /* Prevent horizontal scroll */
  html, body {
    overflow-x: hidden;
    max-width: 100vw;
  }

  * {
    box-sizing: border-box;
  }

  /* ==== HEADER ==== */
  .header {
    width: 100%;
    max-width: 100%;
    padding: 1rem 4%;
    margin: 0;
    box-sizing: border-box;
  }

  .header-container {
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    width: 100%;
    max-width: 100%;
  }

  .header-top {
    display: flex !important;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0;
    gap: 1rem;
  }

  /* Site title - compact */
  .site-title {
    margin-bottom: 0;
    font-size: 1.125rem !important;
    text-align: left;
    line-height: 1.2;
    padding: 0;
    flex: 0 1 auto;
    margin-right: auto;
    white-space: nowrap;
  }

  .site-title-main {
    font-size: 1.125rem;
  }

  .site-title-separator,
  .site-title-subtitle,
  .hide-mobile {
    display: none !important;
  }

  /* Mobile menu toggle */
  .mobile-menu-toggle {
    flex: 0 0 48px !important;
    margin-left: auto;
    padding: 0.5rem;
    min-height: 48px;
    min-width: 48px;
    display: flex !important;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background: none;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .mobile-menu-toggle:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Navigation - mobile */
  .navigation {
    display: none;
    width: 100%;
    margin: var(--space-md) 0 0 0;
    flex-direction: column;
    gap: 0;
    border-top: 1px solid var(--color-border);
  }

  .navigation.mobile-open {
    display: flex !important;
  }

  .navigation a {
    padding: 0.875rem 0;
    font-size: 0.9375rem;
    border-bottom: 1px solid var(--color-border);
    min-height: 48px;
    display: flex;
    align-items: center;
  }

  .navigation a:last-child {
    border-bottom: none;
  }

  .nav-actions {
    padding: var(--space-md) 0;
    border-top: 1px solid var(--color-border);
  }

  .theme-toggle-btn {
    width: 100%;
    padding: 0.75rem;
    font-size: 0.9375rem;
    min-height: 48px;
    justify-content: center;
  }

  /* ==== HERO BANNER ==== */
  .hero-banner {
    height: auto;
    min-height: 250px;
    max-height: 300px;
    margin: 0 -4% var(--space-lg);
    overflow: hidden;
  }

  .hero-banner img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .hero-image-credit {
    font-size: 0.6875rem !important;
    padding: 0 var(--page-margin);
  }

  /* ==== CONTAINER ==== */
  .container {
    width: 100%;
    max-width: 100%;
    padding: 0 4%;
    margin-top: 1.5rem;
    overflow-x: hidden;
    box-sizing: border-box;
  }

  /* ==== HOMEPAGE LAYOUT ==== */
  .homepage-layout {
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    width: 100%;
    max-width: 100%;
    padding: 0;
  }

  .homepage-main {
    width: 100%;
    max-width: 100%;
    padding: 0;
    overflow: hidden;
  }

  .homepage-sidebar {
    position: static;
    width: 100%;
    margin-top: var(--space-2xl);
  }

  /* ==== POST STYLES ==== */
  .post {
    width: 100%;
    max-width: 100%;
    padding: 0 0 var(--space-lg);
    margin-bottom: 1.5rem;
    overflow: hidden;
    box-sizing: border-box;
  }

  .post-title {
    font-size: 1.375rem;
    line-height: 1.3;
    margin: 1rem 0 0.75rem;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .post-content {
    width: 100%;
    max-width: 100%;
    font-size: 0.9375rem;
    line-height: 1.65;
    overflow-wrap: break-word;
    word-wrap: break-word;
    hyphens: auto;
  }

  .post-content p,
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    max-width: 100%;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .post-content h2 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .post-content h3 {
    font-size: 1.125rem;
    margin-top: 1.25rem;
    margin-bottom: 0.625rem;
  }

  .post-content h4 {
    font-size: 1rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  /* ==== CODE BLOCKS ==== */
  .post-content pre {
    padding: 0.75rem;
    font-size: 0.8125rem;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 1rem 0;
    border-radius: 4px;
  }

  .post-content code {
    font-size: 0.8125rem;
    padding: 0.125rem 0.375rem;
  }

  /* ==== BLOG CARDS ==== */
  .blog-cards-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
    margin: var(--space-lg) 0;
    width: 100%;
    max-width: 100%;
  }

  .blog-card {
    width: 100%;
    max-width: 100%;
    padding: var(--space-lg);
    min-height: auto;
    box-sizing: border-box;
  }

  .blog-card-title {
    font-size: 1.125rem;
    line-height: 1.3;
  }

  .blog-card-excerpt {
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .blog-card-icon {
    font-size: 1.5rem;
  }

  /* ==== LIBRARY CARDS ==== */
  .myverse-hub-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
    width: 100%;
  }

  .myverse-hub-card {
    padding: var(--space-lg);
    width: 100%;
    box-sizing: border-box;
  }

  .myverse-hub-icon {
    font-size: 2.5rem;
  }

  .myverse-hub-title {
    font-size: 1.25rem;
  }

  /* ==== SIDEBAR ==== */
  .sidebar-section {
    width: 100%;
    margin-bottom: var(--space-lg);
  }

  .sidebar-section-title {
    font-size: 1.125rem;
  }

  .sidebar-list,
  .sidebar-sublist {
    width: 100%;
  }

  /* ==== TABS ==== */
  .log-tabs {
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .log-tab {
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    min-height: 42px;
    flex: 0 0 auto;
  }

  /* ==== LOG ENTRIES ==== */
  .logs-container {
    width: 100%;
    padding: 0;
  }

  .log-entries-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }

  .log-entry-card {
    padding: var(--space-md);
  }

  .log-entry-title {
    font-size: 1.125rem;
  }

  /* ==== TABLES ==== */
  .post-content table {
    display: block;
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  table {
    font-size: 0.875rem;
  }

  th, td {
    padding: 0.5rem;
    white-space: nowrap;
  }

  /* ==== FORMS ==== */
  .form-input,
  .form-textarea,
  select {
    font-size: 16px !important; /* Prevents iOS zoom */
    padding: 0.75rem;
    min-height: 48px;
    width: 100%;
    box-sizing: border-box;
  }

  .form-textarea {
    min-height: 160px;
  }

  .form-button {
    width: 100%;
    padding: 0.875rem;
    font-size: 0.9375rem;
    min-height: 48px;
  }

  .form-actions {
    flex-direction: column;
    gap: 0.75rem;
  }

  /* ==== MODALS ==== */
  .modal {
    width: 95%;
    max-width: 95%;
    padding: var(--space-lg);
    max-height: 90vh;
    overflow-y: auto;
  }

  /* ==== FOOTER ==== */
  .footer {
    padding: var(--space-xl) 4%;
    margin-top: var(--space-2xl);
    width: 100%;
    box-sizing: border-box;
  }

  .footer-container {
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    width: 100%;
  }

  .footer-section {
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-border);
  }

  .footer-section:last-child {
    border-bottom: none;
  }

  .footer-title {
    font-size: 1.25rem;
  }

  .footer-heading {
    font-size: 1rem;
  }

  .footer-links a {
    font-size: 0.9375rem;
    padding: 0.25rem 0;
    display: inline-block;
  }

  .footer-bottom {
    padding-top: var(--space-md);
  }

  .footer-copyright {
    font-size: 0.8125rem;
  }

  /* ==== ADMIN PANEL ==== */
  .add-content-form {
    gap: 1.25rem;
  }

  .add-button {
    bottom: 1.25rem;
    right: 1.25rem;
    padding: 0.75rem 1.25rem;
    font-size: 0.875rem;
  }

  /* ==== PLAYLISTS ==== */
  .playlist-songs {
    width: 100%;
  }

  .song-card {
    padding: var(--space-md);
  }

  /* ==== MISC ==== */
  .back-button {
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    margin-bottom: 1rem;
  }

  .post-metadata {
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.8125rem;
  }

  .post-date {
    font-size: 0.8125rem;
  }
}

/* ===== SMALL MOBILE (480px) ===== */
@media (max-width: 480px) {
  :root {
    --page-margin: 4%;
  }

  .header {
    padding: 0.75rem 4%;
  }

  .site-title {
    font-size: 1rem !important;
  }

  .site-title-main {
    font-size: 1rem;
  }

  .mobile-menu-toggle {
    flex: 0 0 44px !important;
    min-height: 44px;
    min-width: 44px;
    font-size: 1.25rem;
  }

  .navigation a {
    font-size: 0.875rem;
    padding: 0.75rem 0;
  }

  .hero-banner {
    min-height: 200px;
    max-height: 250px;
  }

  .post-title {
    font-size: 1.25rem;
  }

  .post-content {
    font-size: 0.875rem;
  }

  .post-content h2 {
    font-size: 1.125rem;
  }

  .post-content h3 {
    font-size: 1rem;
  }

  .post-content h4 {
    font-size: 0.9375rem;
  }

  .blog-card-title {
    font-size: 1rem;
  }

  .blog-card-excerpt {
    font-size: 0.875rem;
  }

  .footer-title {
    font-size: 1.125rem;
  }

  .add-button {
    bottom: 1rem;
    right: 1rem;
    padding: 0.625rem 1rem;
    font-size: 0.8125rem;
  }
}

/* ===== VERY SMALL MOBILE (360px) ===== */
@media (max-width: 360px) {
  .site-title-main {
    font-size: 0.9375rem;
  }

  .mobile-menu-toggle {
    flex: 0 0 40px !important;
    min-height: 40px;
    min-width: 40px;
    font-size: 1.125rem;
  }

  .navigation a {
    font-size: 0.8125rem;
  }

  .post-title {
    font-size: 1.125rem;
  }

  .post-content {
    font-size: 0.8125rem;
  }
}

/* ===== LANDSCAPE ORIENTATION ON MOBILE ===== */
@media (max-height: 500px) and (orientation: landscape) {
  .header {
    padding: 0.5rem 4%;
  }

  .site-title {
    font-size: 0.875rem !important;
  }

  .navigation a {
    padding: 0.5rem 0;
    font-size: 0.8125rem;
  }

  .hero-banner {
    max-height: 200px;
  }

  .modal {
    max-height: 95vh;
  }
}

/* ===== ENSURE TOUCH TARGETS ===== */
@media (max-width: 768px) {
  a, button, input[type="button"], input[type="submit"], select {
    min-height: 44px;
    min-width: 44px;
  }

  /* Better tap highlights */
  * {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
  }

  /* Smooth scrolling for mobile */
  html {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }
}
