  .form-actions {
    flex-direction: column;
    gap: 0.625rem;
  }

  .form-button {
    width: 100%;
    padding: 0.875rem;
    font-size: 0.9375rem;
    min-height: 46px;
    border-radius: 0;
  }

  .twitter-sidebar-title {
    font-size: 1.375rem;
    margin-bottom: 1rem;
  }

  /* Make tables scroll horizontally on small screens */
  .post-content table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }

  /* Improve form usability */
  input, textarea, select {
    font-size: 16px; /* Prevents zoom on iOS */
  }
}

/* Small mobile devices - compact but readable */
@media (max-width: 480px) {
  :root {
    --page-margin: 2.5%;
  }

  .header {
    padding: 0.75rem 2.5%;
  }

  /* Smaller hero on small devices */
  .hero-banner {
    height: 280px;
  }

  .geometric-hero {
    transform: scale(0.75);
    height: 350px;
  }

  .site-title {
    font-size: 1rem;
  }

  .site-title-main {
    font-size: 1rem;
  }

  .navigation a {
    font-size: 0.875rem;
    padding: 0.75rem 0.875rem;
  }

  .theme-toggle-btn {
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
  }

  .post-title {
    font-size: 1.25rem;
    line-height: 1.3;
  }

  .blog-title {
    font-size: 1.25rem;
    line-height: 1.3;
  }

  .blog-post .post-title {
    font-size: 1.125rem;
    line-height: 1.3;
  }

  .log-entry-title {
    font-size: 1.125rem;
    line-height: 1.3;
  }

  .post-content {
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .post-content h2 {
    font-size: 1.125rem;
    line-height: 1.3;
  }

  .post-content h3 {
    font-size: 1rem;
    line-height: 1.3;
  }

  .post-content h4 {
    font-size: 0.9375rem;
    line-height: 1.3;
  }

  .post-date {
    font-size: 0.8125rem;
  }

  .post-metadata {
    font-size: 0.8125rem;
    flex-direction: column;
    gap: 0.25rem;
  }

  .add-button {
    bottom: 1.25rem;
    right: 1.25rem;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    border-radius: 0;
  }

  .modal {
    padding: 1.25rem;
  }

  .add-entry-title {
    font-size: 1.375rem;
  }

  .twitter-sidebar-container {
    margin: 1rem 0;
    padding: 0;
  }

  .post-section-title {
    font-size: 1.375rem;
    margin: 2rem 0 1.25rem;
  }
}

/* Very small devices */
@media (max-width: 360px) {
  .header-container {
    gap: var(--space-sm);
  }

  .navigation {
    gap: var(--space-2xs);
  }

  .navigation a {
    font-size: 0.7rem;
    padding: var(--space-2xs);
  }

  .post-title {
    font-size: 1.125rem;
  }

  .blog-title {
    font-size: 1.125rem;
  }

  .post-content {
    font-size: 0.85rem;
  }
}

/* Landscape orientation on mobile */
@media (max-height: 500px) and (orientation: landscape) {
  .header {
    padding: var(--space-sm) var(--page-margin);
  }

  .header-container {
    gap: var(--space-sm);
  }

  .site-title {
    font-size: 0.95rem;
  }

  .navigation a {
    font-size: 0.75rem;
  }

  .modal {
    max-height: 95vh;
    overflow-y: auto;
  }
}

/* ========================================
   CLEAN MOBILE OVERRIDE - FINAL AUTHORITY
   ======================================== */
@media (max-width: 768px) {
  /* Prevent horizontal scroll */
  html {
    overflow-x: hidden;
  }
  
  body {
    overflow-x: hidden;
  }

  /* Main containers - absolute width control */
  .container {
    width: 100%;
    max-width: 100%;
    padding-left: 2%;
    padding-right: 2%;
    overflow-x: hidden;
    box-sizing: border-box;
  }

  /* Header - clean left/right alignment */
  .header {
    width: 100%;
    max-width: 100%;
    padding: 1rem 2%;
    margin: 0;
    box-sizing: border-box;
  }

  .header-container {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 100% !important;
    gap: 0.75rem !important;
    padding: 0 3vw !important;
  }

  .site-title {
    flex: 0 1 auto !important;
    margin-right: auto !important;
    margin-left: 0 !important;
    padding: 0 !important;
    max-width: 70% !important;
    white-space: nowrap !important;
  }

  .mobile-menu-toggle {
    flex: 0 0 48px !important;
    margin-left: auto !important;
    margin-right: 0 !important;
    padding: 0 !important;
  }

  /* Homepage layout */
  .homepage-layout {
    width: 100% !important;
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  /* Content area - force word wrap */
  .homepage-main {
    width: 100% !important;
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
    overflow-x: hidden !important;
  }

  .post {
    width: 100% !important;
    max-width: 100% !important;
    padding: 0 !important;
    margin-bottom: 2rem !important;
    overflow-x: hidden !important;
  }

  .post-content {
    width: 100% !important;
    max-width: 92vw !important;
    padding: 0 !important;
    margin: 0 !important;
    overflow-wrap: break-word !important;
    word-wrap: break-word !important;
    word-break: break-word !important;
    box-sizing: border-box !important;
  }

  /* Text wrapping */
  .post-content p,
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6,
  .post-title {
    max-width: 92vw;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }
  
  /* Target $ and > symbols specifically */
  .post-content br {
    display: block !important;
  }
  
  /* Ensure inline text wraps properly */
  p, span, div, h1, h2, h3, h4, h5, h6 {
    display: block !important;
    max-width: 92vw !important;
    overflow-wrap: break-word !important;
    word-wrap: break-word !important;
  }

  /* Code blocks need horizontal scroll */
  .post-content pre {
    width: 100% !important;
    max-width: 100% !important;
    overflow-x: auto !important;
    word-break: normal !important;
  }

  .post-content code {
    word-break: break-all !important;
  }
}